syntax on
let mapleader = " "
set nocompatible
set rnu
set number
set encoding=utf-8
set mouse=a
set clipboard=unnamedplus

"Indent
set autoindent
set expandtab
set tabstop=4
set shiftwidth=4
filetype indent on
set termguicolors

set background=dark

"Eliminate swap files
set noswapfile
set nobackup
set undodir=~/.config/nvim/.undodir/
set undofile

"Ignore Capital word
set incsearch
set ignorecase

"Set the position of a new split
set splitbelow
set splitright
